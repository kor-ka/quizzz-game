{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "../node_modules/*",
        "src/types/*"
      ]
    },
    "types": []
  },
  "include": [
    "src/**/*",
    "./index.ts",
  ],
}